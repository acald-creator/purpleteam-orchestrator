{
  "name": "purpleteam-orchestrator",
  "version": "0.1.0-alpha.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "deps": "npm-check",
    "update:deps": "npm-check -u",
    "test": "lab --assert code --coverage",
    "test:debug": "node --inspect-brk ./node_modules/.bin/lab --assert code --timeout 0",
    "pretest": "npm run lint",
    "debug": "node --inspect-brk ./index.js",
    "start": "node ./index.js",
    "dc-orchestrator": "LOCAL_GROUP_ID=$(id -g) LOCAL_USER_ID=$(id -u) docker-compose -f ./compose/docker-compose-bridge-net.yml",
    "dc-orchestrator-testers": "LOCAL_GROUP_ID=$(id -g) LOCAL_USER_ID=$(id -u) docker-compose -f ./compose/docker-compose-orchestrator-testers.yml",    
    "dc-build-orchestrator": "npm run dc-orchestrator build",
    "dc-up-orchestrator": "npm run dc-orchestrator up",
    "dc-build": "npm run dc-orchestrator-testers build",
    "dc-up": "npm run dc-orchestrator-testers up",
    "dc-down": "npm run dc-orchestrator-testers down"
  },
  "pre-commit": [
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/purpleteam-labs/purpleteam-orchestrator.git"
